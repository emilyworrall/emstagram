<p><%= image_tag @post.image.url(:thumb) %></p>
<p><%= @post.description %></p>
<% if @post.comments.any? %>
  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <%= comment.thoughts %>
      </li>
    <% end %>
  </ul>
<% else %>
  No comments yet
<% end %>

<%= link_to "Add comment", new_post_comment_path(@post) %>
<%= link_to "Delete post", post_path(@post), method: :delete %>
<%= link_to "Home", "/posts" %>
